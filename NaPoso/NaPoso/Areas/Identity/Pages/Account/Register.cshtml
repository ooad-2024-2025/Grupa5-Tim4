@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Kreiraj novi račun.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Ime" id="ime" class="form-control" autocomplete="ime" aria-required="true" placeholder="Ime" />
                <label asp-for="Input.Ime">Ime</label>
                <span asp-validation-for="Input.Ime" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Prezime" id="prezime" class="form-control" autocomplete="prezime" aria-required="true" placeholder="Prezime" />
                <label asp-for="Input.Prezime">Prezime</label>
                <span asp-validation-for="Input.Prezime" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.BrojTelefona" id="phone" class="form-control" autocomplete="tel" aria-required="true" placeholder="+387..." value="+387" />
                <label asp-for="Input.BrojTelefona">Broj Telefona</label>
                <span asp-validation-for="Input.BrojTelefona" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Lozinka</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Potvrdi Lozinku</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <select asp-for="Input.Uloga" class="form-select" aria-required="true">
                <option value="">-- Odaberi ulogu --</option>
                <option value="Klijent">Klijent</option>
                <option value="Radnik">Radnik</option>
            </select>
            <span asp-validation-for="Input.Uloga" class="text-danger"></span>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registriraj se</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
