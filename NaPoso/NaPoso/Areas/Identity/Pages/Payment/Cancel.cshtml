@page
@model NaPoso.Areas.Identity.Pages.Payment.CancelModel
@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title text-danger">
                        <i class="fas fa-times-circle"></i> Plaćanje otkazano
                    </h1>
                    <p class="lead">Vaše plaćanje je otkazano. Nema naplaćenih iznosa. Nismo Vam uspjeli ukrasti pare 😒</p>

                    @if (Model.OglasId.HasValue)
                    {
                        <p>Možete se vratiti na pregled prijavljenih radnika za oglas.</p>
                        <a asp-controller="Oglas" asp-action="PrijavljeniRadnici" asp-route-oglasId="@Model.OglasId" class="btn btn-primary mt-3">
                            Natrag na prijave
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                            Povratak na početnu
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>