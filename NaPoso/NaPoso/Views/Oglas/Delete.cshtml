@model NaPoso.Models.Oglas

@{
    ViewData["Title"] = "Obriši";
}

<h1>Obriši oglas</h1>

<h3>Da li ste sigurni da želite obrisati oglas?</h3>
<div>
    <h4>Oglas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RadnikId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RadnikId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lokacija)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lokacija)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipPosla)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipPosla)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CijenaPosla)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CijenaPosla)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naslov)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naslov)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        @if (User.IsInRole("Klijent"))
        {
            <a asp-action="OglasiKlijenta">Nazad</a>
        }
        else if (User.IsInRole("Admin"))
        {
            <a asp-action="Index">Nazad</a>
        }
    </form>
</div>
