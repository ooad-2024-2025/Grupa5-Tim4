@model NaPoso.Models.AdminOglasView

<h1>Kreiraj oglas</h1>

<form asp-action="KreirajPosao" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KlijentEmail"></label>
                <input asp-for="KlijentEmail" class="form-control" />
                <span asp-validation-for="KlijentEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Naslov" class="control-label"></label>
                <input asp-for="Naslov" class="form-control" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokacija" class="control-label"></label>
                <input asp-for="Lokacija" class="form-control" />
                <span asp-validation-for="Lokacija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipPosla" class="control-label"></label>
                <input asp-for="TipPosla" class="form-control" />
                <span asp-validation-for="TipPosla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CijenaPosla" class="control-label"></label>
                <input asp-for="CijenaPosla" class="form-control" />
                <span asp-validation-for="CijenaPosla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Objavi" class="btn btn-primary" />
        <a asp-controller="Oglas" asp-action="Index">Nazad</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
