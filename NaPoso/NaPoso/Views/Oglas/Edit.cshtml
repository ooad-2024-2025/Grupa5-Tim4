@model NaPoso.Models.Oglas

@{
    ViewData["Title"] = "Uredi";
}

<h1>Uredi</h1>

<h4>Oglas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naslov" class="control-label"></label>
                <input asp-for="Naslov" class="form-control" />
                <span asp-validation-for="Naslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokacija" class="control-label"></label>
                <input asp-for="Lokacija" class="form-control" />
                <span asp-validation-for="Lokacija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipPosla" class="control-label"></label>
                <input asp-for="TipPosla" class="form-control" />
                <span asp-validation-for="TipPosla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CijenaPosla" class="control-label"></label>
                <input asp-for="CijenaPosla" class="form-control" />
                <span asp-validation-for="CijenaPosla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Izmjeni" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (User.IsInRole("Klijent"))
    {
        <a asp-action="OglasiKlijenta">Nazad</a>
    }
    else if (User.IsInRole("Admin"))
    {
        <a asp-controller="Home" asp-action="Index">Nazad</a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
